        <div class="relative bg-[#005593] rounded-lg shadow-sm">
          <!-- Botón de cierre -->
          <button onclick="closeModal()" type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-red-900 hover:text-gray-100 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="popup-modal">
